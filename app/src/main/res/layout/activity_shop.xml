<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_main"
    tools:context=".Shop">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50px"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="26dp"
            android:paddingTop="25px"
            android:layout_height="35dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="@string/shop"
            android:textColor="@color/white"
            android:textSize="55dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/medium"
                android:text="@string/balance"
                android:textColor="@color/white"
                android:textSize="25dp"
                />
            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingLeft="10px"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:fontFamily="@font/medium"
                />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30px"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="147dp"
                android:src="@drawable/hand" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15px"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Autoclicker"
                    android:textColor="@color/white"
                    android:textSize="27dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/light"
                    android:textColor="@color/white"
                    android:text="1 click per 1 second"
                    android:textSize="17dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/count"
                        android:fontFamily="@font/medium"
                        android:paddingTop="10px"/>
                    <TextView
                        android:id="@+id/autoclickerCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingLeft="7px"
                        android:text="0"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/price"
                        android:fontFamily="@font/medium" />
                    <TextView
                        android:id="@+id/autoclickerPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingLeft="7px"
                        android:text="500"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/buyAutoclicker"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:text="buy"
                    android:textColor="@color/grey_main"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:cornerRadius="30px" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="950px"
            android:paddingTop="15px"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30px"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="147dp"
                android:src="@drawable/factory" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15px"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="@string/factory"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/light"
                    android:textColor="@color/white"
                    android:text="Generates 50 per second"
                    android:textSize="17dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/count"
                        android:fontFamily="@font/medium"
                        android:paddingTop="10px"/>
                    <TextView
                        android:id="@+id/factoryCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingLeft="7px"
                        android:text="0"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/price"
                        android:fontFamily="@font/medium" />
                    <TextView
                        android:id="@+id/factoryPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingLeft="7px"
                        android:text="5000"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/buyFactory"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:text="buy"
                    android:textColor="@color/grey_main"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:cornerRadius="30px" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="950px"
            android:paddingTop="15px"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30px"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="147dp"
                android:src="@drawable/city" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15px"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="@string/city"
                    android:textColor="@color/white"
                    android:textSize="27dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/light"
                    android:textColor="@color/white"
                    android:text="Builds 500 per second"
                    android:textSize="17dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/count"
                        android:fontFamily="@font/medium"
                        android:paddingTop="10px"/>
                    <TextView
                        android:id="@+id/factoryCounte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingLeft="7px"
                        android:text="0"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/price"
                        android:fontFamily="@font/medium" />
                    <TextView
                        android:id="@+id/factoryPrie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingLeft="7px"
                        android:text="45000"
                        android:textColor="@color/white"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/buyCity"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:text="buy"
                    android:textColor="@color/grey_main"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:cornerRadius="30px" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="950px"
            android:paddingTop="15px"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30px"
            android:paddingBottom="20px"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="147dp"
                android:src="@drawable/god" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15px"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="@string/god"
                    android:textColor="@color/white"
                    android:textSize="27dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/light"
                    android:textColor="@color/white"
                    android:text="Gives you 10000 per second"
                    android:textSize="17dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/count"
                        android:fontFamily="@font/medium"
                        android:paddingTop="10px"/>
                    <TextView
                        android:id="@+id/factryCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingLeft="7px"
                        android:text="0"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:text="@string/price"
                        android:fontFamily="@font/medium" />
                    <TextView
                        android:id="@+id/factryPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:paddingLeft="7px"
                        android:text="150000"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/buyGod"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:text="buy"
                    android:textColor="@color/grey_main"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:cornerRadius="30px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>