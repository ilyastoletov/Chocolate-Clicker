<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChocolateClicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_main</item>
        <item name="colorPrimaryVariant">@color/grey_main</item>
        <item name="colorOnPrimary">@color/grey_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_main</item>
        <item name="colorSecondaryVariant">@color/grey_main</item>
        <item name="colorOnSecondary">@color/grey_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BtnTheme" parent="android:style/Theme.NoTitleBar">
        <item name="android:buttonStyle">@style/button</item>
    </style>

    <style name="Theme.ChocolateClicker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChocolateClicker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChocolateClicker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>